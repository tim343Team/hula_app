<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/shape_radius_top20_fff"
    android:orientation="vertical">

    <com.hula.myapplication.widget.HuLaActionBar
        android:id="@+id/action_bar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:acb_back_bg="@color/transparent"
        app:acb_title="Select Categories">

        <com.hula.myapplication.widget.HuLaActionBarMenu
            android:id="@+id/menu"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:padding="5dp"
            app:menu_text="Done"
            app:menu_textColor="#835EE2" />
    </com.hula.myapplication.widget.HuLaActionBar>


    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="#B7B7B7" />

    <FrameLayout
        android:layout_marginHorizontal="35dp"
        android:id="@+id/layout"
        android:layout_width="match_parent"
        android:layout_height="match_parent" />
</LinearLayout>