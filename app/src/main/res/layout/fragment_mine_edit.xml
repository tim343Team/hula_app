<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@null">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical"
            android:padding="@dimen/dimen_16">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical|start"
                android:text="@string/my_photo"
                android:textColor="@color/color_2e2e2e"
                android:textSize="18dp" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical|start"
                android:layout_marginTop="@dimen/dimen_2"
                android:text="@string/mine_notice_1"
                android:textColor="@color/color_2e2e2e"
                android:textSize="13dp" />

            <RelativeLayout
                android:layout_width="@dimen/dimen_194"
                android:layout_height="@dimen/dimen_158"
                android:layout_gravity="center"
                android:layout_marginTop="@dimen/dimen_6">

                <ImageView
                    android:id="@+id/img_phtoto_1"
                    android:layout_width="@dimen/dimen_158"
                    android:layout_height="@dimen/dimen_158"
                    android:layout_centerInParent="true"
                    android:src="@mipmap/icon_default_photo" />

                <ImageView
                    android:id="@+id/img_add"
                    android:layout_width="@dimen/dimen_36"
                    android:layout_height="@dimen/dimen_36"
                    android:layout_alignParentEnd="true"
                    android:layout_alignParentBottom="true"
                    android:background="@mipmap/icon_add_2" />

            </RelativeLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/dimen_17"
                android:gravity="center"
                android:orientation="horizontal">

                <ImageView
                    android:id="@+id/img_phtoto_2"
                    android:layout_width="@dimen/dimen_105"
                    android:layout_height="@dimen/dimen_105"
                    android:src="@mipmap/icon_add_image" />

                <ImageView
                    android:id="@+id/img_phtoto_3"
                    android:layout_width="@dimen/dimen_105"
                    android:layout_height="@dimen/dimen_105"
                    android:layout_marginHorizontal="@dimen/dimen_14"
                    android:src="@mipmap/icon_add_image" />

                <ImageView
                    android:id="@+id/img_phtoto_4"
                    android:layout_width="@dimen/dimen_105"
                    android:layout_height="@dimen/dimen_105"
                    android:src="@mipmap/icon_add_image" />

            </LinearLayout>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical|start"
                android:layout_marginTop="@dimen/dimen_30"
                android:layout_marginBottom="@dimen/dimen_8"
                android:text="@string/my_photo"
                android:textColor="@color/color_2e2e2e"
                android:textSize="18dp" />

            <View
                android:layout_width="match_parent"
                android:layout_height="@dimen/dp1"
                android:background="@color/color_878787" />

            <LinearLayout
                android:id="@+id/ll_name"
                android:layout_width="match_parent"
                android:layout_height="@dimen/dimen_56"
                android:orientation="horizontal">

                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:gravity="center_vertical|start"
                    android:orientation="vertical">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center_vertical|start"
                        android:ellipsize="end"
                        android:maxLines="1"
                        android:text="@string/name"
                        android:textColor="@color/color_2e2e2e"
                        android:textSize="13dp" />

                    <TextView
                        android:id="@+id/tv_name"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center_vertical|start"
                        android:ellipsize="end"
                        android:maxLines="1"
                        android:textColor="@color/color_5C5C5C"
                        android:textSize="13dp" />
                </LinearLayout>

                <ImageView
                    android:layout_width="@dimen/dimen_16"
                    android:layout_height="@dimen/dimen_16"
                    android:layout_gravity="center_vertical"
                    android:layout_marginStart="@dimen/dimen_16"
                    android:src="@mipmap/icon_more" />
            </LinearLayout>

            <View
                android:layout_width="match_parent"
                android:layout_height="@dimen/dp1"
                android:background="@color/color_878787" />

            <LinearLayout
                android:id="@+id/ll_age"
                android:layout_width="match_parent"
                android:layout_height="@dimen/dimen_56"
                android:orientation="horizontal">

                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:gravity="center_vertical|start"
                    android:orientation="vertical">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center_vertical|start"
                        android:ellipsize="end"
                        android:maxLines="1"
                        android:text="@string/age"
                        android:textColor="@color/color_2e2e2e"
                        android:textSize="13dp" />

                    <TextView
                        android:id="@+id/tv_age"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center_vertical|start"
                        android:ellipsize="end"
                        android:maxLines="1"
                        android:textColor="@color/color_5C5C5C"
                        android:textSize="13dp" />
                </LinearLayout>

                <ImageView
                    android:layout_width="@dimen/dimen_16"
                    android:layout_height="@dimen/dimen_16"
                    android:layout_gravity="center_vertical"
                    android:layout_marginStart="@dimen/dimen_16"
                    android:src="@mipmap/icon_more" />
            </LinearLayout>

            <View
                android:layout_width="match_parent"
                android:layout_height="@dimen/dp1"
                android:background="@color/color_878787" />

            <LinearLayout
                android:id="@+id/ll_school"
                android:layout_width="match_parent"
                android:layout_height="@dimen/dimen_56"
                android:orientation="horizontal">

                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:gravity="center_vertical|start"
                    android:orientation="vertical">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center_vertical|start"
                        android:ellipsize="end"
                        android:maxLines="1"
                        android:text="@string/school"
                        android:textColor="@color/color_2e2e2e"
                        android:textSize="13dp" />

                    <TextView
                        android:id="@+id/tv_school"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center_vertical|start"
                        android:ellipsize="end"
                        android:maxLines="1"
                        android:textColor="@color/color_5C5C5C"
                        android:textSize="13dp" />
                </LinearLayout>

                <ImageView
                    android:layout_width="@dimen/dimen_16"
                    android:layout_height="@dimen/dimen_16"
                    android:layout_gravity="center_vertical"
                    android:layout_marginStart="@dimen/dimen_16"
                    android:src="@mipmap/icon_more" />
            </LinearLayout>

            <View
                android:layout_width="match_parent"
                android:layout_height="@dimen/dp1"
                android:background="@color/color_878787" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="@dimen/dimen_56"
                android:orientation="horizontal">

                <LinearLayout
                    android:id="@+id/ll_job_title"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:gravity="center_vertical|start"
                    android:orientation="vertical">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center_vertical|start"
                        android:ellipsize="end"
                        android:maxLines="1"
                        android:text="@string/job_time"
                        android:textColor="@color/color_2e2e2e"
                        android:textSize="13dp" />

                    <TextView
                        android:id="@+id/tv_job_title"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center_vertical|start"
                        android:ellipsize="end"
                        android:maxLines="1"
                        android:textColor="@color/color_5C5C5C"
                        android:textSize="13dp" />
                </LinearLayout>

                <ImageView
                    android:layout_width="@dimen/dimen_16"
                    android:layout_height="@dimen/dimen_16"
                    android:layout_gravity="center_vertical"
                    android:layout_marginStart="@dimen/dimen_16"
                    android:src="@mipmap/icon_more" />
            </LinearLayout>

            <View
                android:layout_width="match_parent"
                android:layout_height="@dimen/dp1"
                android:background="@color/color_878787" />

            <LinearLayout
                android:id="@+id/ll_drink"
                android:layout_width="match_parent"
                android:layout_height="@dimen/dimen_56"
                android:orientation="horizontal">

                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:gravity="center_vertical|start"
                    android:orientation="vertical">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center_vertical|start"
                        android:ellipsize="end"
                        android:maxLines="1"
                        android:text="@string/drink"
                        android:textColor="@color/color_2e2e2e"
                        android:textSize="13dp" />

                    <TextView
                        android:id="@+id/tv_drink"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center_vertical|start"
                        android:ellipsize="end"
                        android:maxLines="1"
                        android:textColor="@color/color_5C5C5C"
                        android:textSize="13dp" />
                </LinearLayout>

                <ImageView
                    android:layout_width="@dimen/dimen_16"
                    android:layout_height="@dimen/dimen_16"
                    android:layout_gravity="center_vertical"
                    android:layout_marginStart="@dimen/dimen_16"
                    android:src="@mipmap/icon_more" />
            </LinearLayout>

            <View
                android:layout_width="match_parent"
                android:layout_height="@dimen/dp1"
                android:background="@color/color_878787" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical|start"
                android:layout_marginTop="@dimen/dimen_24"
                android:text="@string/profile_badge"
                android:textColor="@color/color_2e2e2e"
                android:textSize="18dp" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical|start"
                android:layout_marginTop="@dimen/dimen_2"
                android:text="@string/mine_notice_2"
                android:textColor="@color/color_2e2e2e"
                android:textSize="13dp" />

            <androidx.recyclerview.widget.RecyclerView
                android:id="@+id/recycler_profile"
                android:layout_width="match_parent"
                android:layout_height="wrap_content" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical|start"
                android:layout_marginTop="@dimen/dimen_24"
                android:text="@string/about_me"
                android:textColor="@color/color_2e2e2e"
                android:textSize="18dp" />

            <RelativeLayout
                android:id="@+id/ll_about_me"
                android:layout_width="match_parent"
                android:layout_height="103dp"
                android:layout_marginTop="@dimen/dimen_8"
                android:background="@drawable/shape_radius15_stroke1"
                android:padding="@dimen/dimen_12">

                <EditText
                    android:id="@+id/edit_about_me"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_toStartOf="@id/tv_edit_length"
                    android:background="@null"
                    android:hint="@string/about_me"
                    android:inputType="textMultiLine"
                    android:lineSpacingMultiplier="1.2"
                    android:maxLength="160"
                    android:textColor="@color/color_5C5C5C"
                    android:textSize="@dimen/dimen_14" />

                <TextView
                    android:id="@+id/tv_edit_length"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentEnd="true"
                    android:layout_alignParentBottom="true"
                    android:layout_marginStart="@dimen/dimen_8"
                    android:ellipsize="end"
                    android:maxLines="1"
                    android:text="160"
                    android:textColor="@color/app_main_color"
                    android:textSize="13dp" />
            </RelativeLayout>

            <View
                android:layout_width="match_parent"
                android:layout_height="@dimen/dp1"
                android:layout_marginTop="@dimen/dimen_24"
                android:layout_marginBottom="@dimen/dimen_24"
                android:background="@color/color_878787" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical|start"
                android:text="@string/categories_into"
                android:textColor="@color/color_2e2e2e"
                android:textSize="18dp" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical|start"
                android:layout_marginTop="@dimen/dimen_2"
                android:text="@string/mine_notice_3"
                android:textColor="@color/color_2e2e2e"
                android:textSize="13dp" />

            <androidx.recyclerview.widget.RecyclerView
                android:id="@+id/recycler_categorie"
                android:layout_width="match_parent"
                android:layout_height="wrap_content" />

            <View
                android:layout_width="match_parent"
                android:layout_height="@dimen/dp1"
                android:layout_marginTop="@dimen/dimen_24"
                android:layout_marginBottom="@dimen/dimen_24"
                android:background="@color/color_878787" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical|start"
                android:text="@string/buck_list"
                android:textColor="@color/color_2e2e2e"
                android:textSize="18dp" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical|start"
                android:layout_marginTop="@dimen/dimen_2"
                android:text="@string/mine_notice_4"
                android:textColor="@color/color_2e2e2e"
                android:textSize="13dp" />

            <LinearLayout
                android:id="@+id/ll_event_1"
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:layout_marginTop="@dimen/dimen_16"
                android:background="@drawable/shape_radius15_stroke_b7b7b7"
                android:gravity="center_vertical"
                android:orientation="horizontal"
                android:paddingHorizontal="@dimen/dimen_12">

                <ImageView
                    android:layout_width="30dp"
                    android:layout_height="30dp"
                    android:background="@mipmap/icon_number_1" />

                <EditText
                    android:id="@+id/edit_event_1"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="16dp"
                    android:layout_weight="1"
                    android:background="@null"
                    android:hint="@string/profile_event_hint_1"
                    android:maxLength="40"
                    android:maxLines="1"
                    android:textColor="@color/color_5C5C5C"
                    android:textSize="13dp" />

            </LinearLayout>

            <LinearLayout
                android:id="@+id/ll_event_2"
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:layout_marginTop="@dimen/dimen_8"
                android:background="@drawable/shape_radius15_stroke_b7b7b7"
                android:gravity="center_vertical"
                android:orientation="horizontal"
                android:paddingHorizontal="@dimen/dimen_12">

                <ImageView
                    android:layout_width="30dp"
                    android:layout_height="30dp"
                    android:background="@mipmap/icon_number_2" />

                <EditText
                    android:id="@+id/edit_event_2"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="16dp"
                    android:layout_weight="1"
                    android:background="@null"
                    android:hint="@string/profile_event_hint_1"
                    android:maxLength="40"
                    android:maxLines="1"
                    android:textColor="@color/color_5C5C5C"
                    android:textSize="13dp" />

            </LinearLayout>

            <LinearLayout
                android:id="@+id/ll_event_3"
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:layout_marginTop="@dimen/dimen_8"
                android:background="@drawable/shape_radius15_stroke_b7b7b7"
                android:gravity="center_vertical"
                android:orientation="horizontal"
                android:paddingHorizontal="@dimen/dimen_12">

                <ImageView
                    android:layout_width="30dp"
                    android:layout_height="30dp"
                    android:background="@mipmap/icon_number_3" />

                <EditText
                    android:id="@+id/edit_event_3"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="16dp"
                    android:layout_weight="1"
                    android:background="@null"
                    android:hint="@string/profile_event_hint_1"
                    android:maxLength="40"
                    android:maxLines="1"
                    android:textColor="@color/color_5C5C5C"
                    android:textSize="13dp" />

            </LinearLayout>

        </LinearLayout>


    </ScrollView>

</RelativeLayout>