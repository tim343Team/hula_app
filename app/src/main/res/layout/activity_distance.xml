<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    android:orientation="vertical">

    <com.hula.myapplication.widget.HuLaActionBar
        android:id="@+id/action_bar"
        style="@style/defActionBarStyle"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:acb_enableBack="false"
        app:acb_title="">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:gravity="center_vertical"
            android:orientation="horizontal">

            <ImageView
                android:id="@+id/tv_back"
                android:layout_width="@dimen/dimen_36"
                android:layout_height="@dimen/dimen_36"
                android:layout_marginStart="8dp"
                android:background="@mipmap/icon_finish" />

            <TextView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:layout_gravity="center_vertical"
                android:gravity="center"
                android:text="@string/distance"
                android:textColor="@color/black"
                android:textSize="18dp"
                android:textStyle="bold"/>

            <ImageView
                android:id="@+id/tv_more"
                android:layout_width="@dimen/dimen_36"
                android:layout_height="@dimen/dimen_36"
                android:layout_marginStart="8dp"
                android:visibility="invisible"/>


        </LinearLayout>

    </com.hula.myapplication.widget.HuLaActionBar>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:padding="@dimen/dimen_16"
        android:orientation="vertical">

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/distance_notice_1"
            android:textColor="@color/black"
            android:textSize="24dp"
            android:textStyle="bold"/>

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/distance_notice_2"
            android:textColor="@color/black"
            android:textSize="13dp"/>

        <TextView
            android:id="@+id/tv_distance_range"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center_horizontal"
            android:layout_marginTop="@dimen/dimen_29"
            android:text="@string/distance_range"
            android:textColor="@color/black"
            android:textSize="24dp"
            android:textStyle="bold"/>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:layout_marginTop="@dimen/dimen_40">

            <LinearLayout
                android:id="@+id/ll_bar"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="-10dp"
                android:orientation="horizontal">

                <LinearLayout
                    android:layout_width="@dimen/dimen_40"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_horizontal"
                    android:layout_marginBottom="-16dp"
                    android:gravity="center_horizontal"
                    android:orientation="vertical">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="1"
                        android:textColor="@color/color_5C5C5C"
                        android:textSize="@dimen/dimen_13" />

                    <View
                        android:layout_width="1dp"
                        android:layout_height="9dp"
                        android:background="@color/color_5C5C5C" />
                </LinearLayout>

                <View
                    android:layout_width="0dp"
                    android:layout_height="1dp"
                    android:layout_weight="1" />

                <LinearLayout
                    android:layout_width="@dimen/dimen_40"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_horizontal"
                    android:layout_marginBottom="-16dp"
                    android:gravity="center_horizontal"
                    android:orientation="vertical">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="25"
                        android:textColor="@color/color_5C5C5C"
                        android:textSize="@dimen/dimen_13" />

                    <View
                        android:layout_width="1dp"
                        android:layout_height="9dp"
                        android:background="@color/color_5C5C5C" />
                </LinearLayout>

                <View
                    android:layout_width="0dp"
                    android:layout_height="1dp"
                    android:layout_weight="1" />

                <LinearLayout
                    android:layout_width="@dimen/dimen_40"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_horizontal"
                    android:layout_marginBottom="-16dp"
                    android:gravity="center_horizontal"
                    android:orientation="vertical">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="50"
                        android:textColor="@color/color_5C5C5C"
                        android:textSize="@dimen/dimen_13" />

                    <View
                        android:layout_width="1dp"
                        android:layout_height="9dp"
                        android:background="@color/color_5C5C5C" />
                </LinearLayout>

                <View
                    android:layout_width="0dp"
                    android:layout_height="1dp"
                    android:layout_weight="1" />

                <LinearLayout
                    android:layout_width="@dimen/dimen_40"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_horizontal"
                    android:layout_marginBottom="-16dp"
                    android:gravity="center_horizontal"
                    android:orientation="vertical">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="75"
                        android:textColor="@color/color_5C5C5C"
                        android:textSize="@dimen/dimen_13" />

                    <View
                        android:layout_width="1dp"
                        android:layout_height="9dp"
                        android:background="@color/color_5C5C5C" />
                </LinearLayout>

                <View
                    android:layout_width="0dp"
                    android:layout_height="1dp"
                    android:layout_weight="1" />

                <LinearLayout
                    android:layout_width="@dimen/dimen_40"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_horizontal"
                    android:gravity="center_horizontal"
                    android:orientation="vertical">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="100"
                        android:textColor="@color/color_5C5C5C"
                        android:textSize="@dimen/dimen_13" />

                    <View
                        android:layout_width="1dp"
                        android:layout_height="9dp"
                        android:background="@color/color_5C5C5C" />
                </LinearLayout>
            </LinearLayout>

            <com.hula.myapplication.widget.SeekBarView
                android:id="@+id/seek_bar"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                app:end_drawable="@drawable/seekview_thumb"
                app:not_scroll_bg="@drawable/seekview_not_bar_bg"
                app:has_scroll_bg="@drawable/seekview_has_bar_bg"
                app:scroll_bg_height="@dimen/dimen_12" />

        </LinearLayout>


    </LinearLayout>

</LinearLayout>