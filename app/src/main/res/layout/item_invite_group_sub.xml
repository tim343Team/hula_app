<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginBottom="18dp"
    xmlns:tools="http://schemas.android.com/tools"
    android:gravity="center_vertical"
    android:orientation="horizontal">

    <com.hula.myapplication.widget.WHImageView
        android:id="@+id/avatar"
        android:layout_width="56dp"
        android:layout_height="56dp"
        android:src="@mipmap/icon_persion_null" />

    <LinearLayout
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:layout_marginStart="8dp"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <TextView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:maxLines="2"
                android:ellipsize="end"
                android:textSize="13dp"
                android:textColor="@color/color_2e2e2e"
                android:textStyle="bold"
                tools:text="[Name], wants to join your group  wants to join your group" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="13dp"
                android:textColor="@color/color_2e2e2e"
                android:textStyle="bold"
                tools:text="12:10 PM" />
        </LinearLayout>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="2dp"
            android:drawableStart="@mipmap/icon_group_party"
            android:drawablePadding="5dp"
            android:maxLines="1"
            android:ellipsize="end"
            android:textSize="13dp"
            android:textColor="@color/color_5C5C5C"
            tools:text="Ricky" />

        <LinearLayout
            android:id="@+id/ll_request"
            android:layout_width="match_parent"
            android:gravity="center_vertical"
            android:layout_height="wrap_content"
            android:visibility="gone">

            <TextView
                android:id="@+id/tv_accepte"
                android:layout_width="0dp"
                android:layout_height="20dp"
                android:layout_weight="1"
                android:background="@drawable/shape_radius100_8e73d3"
                android:gravity="center"
                android:layout_marginEnd="5dp"
                android:ellipsize="end"
                android:maxLines="1"
                android:textColor="@color/white"
                android:textSize="13dp"
                android:text="@string/accept" />

            <TextView
                android:id="@+id/tv_ignore"
                android:layout_width="0dp"
                android:layout_height="20dp"
                android:layout_weight="1"
                android:background="@drawable/shape_radius100_stroke1_b6b6b6"
                android:gravity="center"
                android:layout_marginStart="5dp"
                android:ellipsize="end"
                android:maxLines="1"
                android:textColor="@color/color_B6B6B6"
                android:textSize="13dp"
                android:text="@string/ignore" />
        </LinearLayout>

        <LinearLayout
            android:id="@+id/ll_invite"
            android:layout_width="match_parent"
            android:gravity="center_vertical"
            android:layout_height="wrap_content"
            android:visibility="gone">

            <TextView
                android:id="@+id/tv_join"
                android:layout_width="0dp"
                android:layout_height="20dp"
                android:layout_weight="1"
                android:background="@drawable/shape_radius100_8e73d3"
                android:gravity="center"
                android:layout_marginEnd="5dp"
                android:ellipsize="end"
                android:maxLines="1"
                android:textColor="@color/white"
                android:textSize="13dp"
                android:text="@string/join" />

            <TextView
                android:id="@+id/tv_cancel"
                android:layout_width="0dp"
                android:layout_height="20dp"
                android:layout_weight="1"
                android:background="@drawable/shape_radius100_stroke1_b6b6b6"
                android:gravity="center"
                android:layout_marginStart="5dp"
                android:ellipsize="end"
                android:maxLines="1"
                android:textColor="@color/color_B6B6B6"
                android:textSize="13dp"
                android:text="@string/not_interested" />
        </LinearLayout>

        <RelativeLayout
            android:id="@+id/ll_group_full"
            android:layout_width="wrap_content"
            android:layout_height="20dp"
            android:layout_marginTop="11dp"
            android:background="@mipmap/icon_buddy_shape"
            android:visibility="gone">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:layout_centerInParent="true"
                android:maxLines="1"
                android:ellipsize="end"
                android:textSize="13dp"
                android:textColor="@color/white"
                android:text="@string/group_full" />

        </RelativeLayout>

    </LinearLayout>

</LinearLayout>